# API Settings
DEFAULT_API_TOKEN=your-secret-token
SECRET_KEY=your-super-secret-key-for-jwt

# Database Settings
# Choose database type (true for SQLite, false for PostgreSQL)
USE_SQLITE=true

# SQLite connection (used if USE_SQLITE=true)
# DATABASE_URL=sqlite:///./cfdi_api.db

# PostgreSQL connection (used if USE_SQLITE=false)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cfdi_api

# Initial Superadmin (Optional)
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=secure-password

# EFOS Settings
# URL of the EFOS CSV file from SAT
EFOS_CSV_URL=http://omawww.sat.gob.mx/cifras_sat/Documents/Listado_Completo_69-B.csv

# Scheduler settings - Checks for updates every 24 hours by default
# The file will only be downloaded and processed if it has changed
EFOS_UPDATE_INTERVAL_DAYS=1
EFOS_UPDATE_TIME=03:00

# Batch processing settings
MAX_WORKERS=5

# EFOS Download and Processing settings
EFOS_MAX_RETRIES=3
EFOS_RETRY_BACKOFF_SECONDS=5
EFOS_DOWNLOAD_CHUNK_SIZE=8192
EFOS_IMPORT_BATCH_SIZE=1000
EFOS_MAX_DB_SIZE_MB=500

# Worker resilience settings
EFOS_MAX_MEMORY_PERCENT=90
EFOS_HEALTHCHECK_URL=https://hc-ping.com/your-uuid-here
EFOS_HEALTHCHECK_INTERVAL_MINUTES=60

# Heroku dyno anti-sleep (use your app's URL)
KEEP_ALIVE_URL=https://your-app-name.herokuapp.com/health

# Heroku specific
PORT=8000
WEB_CONCURRENCY=2 